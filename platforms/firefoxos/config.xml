<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <platform name="firefoxos">
        <icon height="128" src="icon/icon-128.png" width="128" />
        <icon height="60" src="icon/icon-60.png" width="60" />
    </platform>
    <name>Pic Nic</name>
    <description>
       Aplicação para uma Lanchonente, fornecimento dos serviços do empreendimento.
    </description>
    <author email="mcjuniorhta@gmail.com" href="http://cordova.io">
        Junior Lobato
    </author>
    <content src="teste.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="loadUrlTimeoutValue" value="5000" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="SplashScreen" value="screen" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="show-splash-screen-spinner" value="true" />
    <icon src="icon.png" />
</widget>
