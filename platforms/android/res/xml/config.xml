<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <allow-intent href="market:*" />
    <splash density="land-hdpi" src="platforms/android/res/drawable-land-hdpi/screen.png" />
    <splash density="land-ldpi" src="platforms/android/res/drawable-land-ldpi/screen.png" />
    <splash density="land-mdpi" src="platforms/android/res/drawable-land-mdpi/screen.png" />
    <splash density="land-xhdpi" src="platforms/android/res/drawable-land-xhdpi/screen.png" />
    <splash density="port-hdpi" src="platforms/android/res/drawable-port-hdpi/screen.png" />
    <splash density="port-ldpi" src="platforms/android/res/drawable-port-ldpi/screen.png" />
    <splash density="port-mdpi" src="platforms/android/res/drawable-port-mdpi/screen.png" />
    <splash density="port-xhdpi" src="platforms/android/res/drawable-port-xhdpi/screen.png" />
    <splash density="xxxhdpi" src="www/res/android/screen/splash.9.png" />
    <splash density="tvdpi" src="www/res/android/screen/splash.9.png" />
    <splash density="xxhdpi" src="www/res/android/screen/splash.9.png" />
    <name>Pic Nic</name>
    <description>
       Aplicação para uma Lanchonente, fornecimento dos serviços do empreendimento.
    </description>
    <author email="mcjuniorhta@gmail.com" href="http://cordova.io">
        Junior Lobato
    </author>
    <content src="teste.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="loadUrlTimeoutValue" value="5000" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="SplashScreen" value="screen" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="show-splash-screen-spinner" value="true" />
    <icon src="icon.png" />
</widget>
