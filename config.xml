<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Pic Nic</name>
    <description>
       Aplicação para uma Lanchonente, fornecimento dos serviços do empreendimento.
    </description>
    <author email="mcjuniorhta@gmail.com" href="http://cordova.io">
        Junior Lobato
    </author>
    <content src="teste.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    
    <!-- splash screen -->
<preference name="loadUrlTimeoutValue" value="5000" /> <!-- Aumenta o tempo limite de carregamento antes de disparar um erro, ideal para dispositivos com o hardware limitado e que demoram muito para carregar o app -->
 
<preference name="SplashScreenDelay" value="5000" /> <!-- adiciona um tempo de 'espera' de cinco segundos na tela de splash, isso é útil para dispositivos com hardware limitados -->
 
<preference name="SplashScreen" value="screen" /> <!-- força a exibição da tela de splash screen, caso você não tenha criado para a resolução do device que está rodando, ele irá exibir a tela padrão do phonegap -->
 
<preference name="auto-hide-splash-screen" value="true" /> <!-- Define que a splash screen será removida automaticamente após o carregamento -->
 
<preference name="show-splash-screen-spinner" value="true" /> <!-- Define que será exibido um spinner junto com a splash screen, as apenas se o device tiver este recurso -->
 
<icon src="icon.png" /> <!-- Define o caminho o ícone padrão 'global' com 128px X 128px, o caminho é em relação à pasta www -->
 
<!-- definições de splash screen para cada 'densidade' de resoluções android -->
<platform name="android">
<splash src="platforms/android/res/drawable-land-hdpi/screen.png" density="land-hdpi"/>
<splash src="platforms/android/res/drawable-land-ldpi/screen.png" density="land-ldpi"/>
<splash src="platforms/android/res/drawable-land-mdpi/screen.png" density="land-mdpi"/>
<splash src="platforms/android/res/drawable-land-xhdpi/screen.png" density="land-xhdpi"/>
 
<splash src="platforms/android/res/drawable-port-hdpi/screen.png" density="port-hdpi"/>
<splash src="platforms/android/res/drawable-port-ldpi/screen.png" density="port-ldpi"/>
<splash src="platforms/android/res/drawable-port-mdpi/screen.png" density="port-mdpi"/>
<splash src="platforms/android/res/drawable-port-xhdpi/screen.png" density="port-xhdpi"/>
 
    <!-- 9-patch apenas para altas resoluções -->
<splash src="www/res/android/screen/splash.9.png" density="xxhdpi"/>
<splash src="www/res/android/screen/splash.9.png" density="xxxhdpi"/>
<splash src="www/res/android/screen/splash.9.png" density="tvdpi"/>
 
<!-- global, para todas as resoluções não definidas anteriormente -->
<splash src="www/res/android/screen/splash.9.png" />

</platform>
</widget>
